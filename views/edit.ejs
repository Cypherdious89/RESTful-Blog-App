<%- include('partials/header.ejs') %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div>
            <label>Blog Content</label>
            <textarea name="blog[body]" name="Blog" cols="30" rows="10" id="blog"><%- blog.body %></textarea>
        </div>
        <div>
            <input class="ui inverted violet button" type="submit" value="Submit" >
        </div>
    </form>
</div>

<%- include('partials/footer.ejs') %>